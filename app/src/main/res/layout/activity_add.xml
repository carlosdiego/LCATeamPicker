<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.madeck.lcateampicker.activities.AddActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome"
        android:id="@+id/textViewLabelNome"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextNome"
        android:layout_below="@+id/textViewLabelNome"
        android:layout_alignParentStart="true"
        android:hint="Nick"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Role Primária"
        android:id="@+id/textViewPrimaryRoleLabel"
        android:layout_below="@+id/editTextNome"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextPrimaryRole"
        android:layout_below="@+id/textViewPrimaryRoleLabel"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/editTextNome"
        android:hint="Main role" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Role Secundária"
        android:id="@+id/textViewSecundaryRoleLabel"
        android:layout_below="@+id/editTextPrimaryRole"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextSecundaryRole"
        android:layout_below="@+id/textViewSecundaryRoleLabel"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/editTextPrimaryRole"
        android:hint="Secundary role" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nota"
        android:id="@+id/textViewGradeLabel"
        android:layout_below="@+id/editTextSecundaryRole"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextGrade"
        android:layout_below="@+id/textViewGradeLabel"
        android:layout_alignParentStart="true"
        android:hint="Nota" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:id="@+id/buttonSave"
        android:layout_below="@+id/editTextGrade"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:id="@+id/buttonCancelar"
        android:layout_below="@+id/buttonSave"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
